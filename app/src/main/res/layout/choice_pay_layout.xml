<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <RelativeLayout
        android:id="@+id/rlv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="选择支付方式"
            android:textColor="@color/bc_black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_del2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_for_all" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_pay_zfb"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_title"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pay_zfb_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pay_zhifubao" />

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/pay_zfb_image"
            android:text="支付宝支付"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_for_all" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_pay_wx"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_pay_zfb"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pay_wx_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/pay_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:layout_toRightOf="@+id/pay_wx_image"
            android:text="微信支付"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_for_all" />
    </RelativeLayout>

</RelativeLayout>