<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/share_view"
        android:layout_width="match_parent"
        android:background="@color/bc_white"
        android:layout_height="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_centerVertical="true"
            android:orientation="horizontal">


            <RelativeLayout
                android:id="@+id/wx"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/wx_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ssdk_oks_classic_wechat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/wx_icon"
                    android:layout_marginTop="8dp"
                    android:text="微信"
                    android:textSize="15sp"
                    android:textColor="@color/base_gray"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/wx_cycle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/wx_cycle_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ssdk_oks_classic_wechatmoments"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/wx_cycle_icon"
                    android:layout_marginTop="8dp"
                    android:text="朋友圈"
                    android:textSize="15sp"
                    android:textColor="@color/base_gray"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/qq_rlv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qq_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ssdk_oks_classic_qq"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/qq_icon"
                    android:layout_marginTop="8dp"
                    android:text="QQ好友"
                    android:textSize="15sp"
                    android:textColor="@color/base_gray"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/qqzone_rlv"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/qqzone_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/ssdk_oks_classic_qzone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/qqzone_icon"
                    android:layout_marginTop="8dp"
                    android:text="QQ空间"
                    android:textSize="15sp"
                    android:textColor="@color/base_gray"/>

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>