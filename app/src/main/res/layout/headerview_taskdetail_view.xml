<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_for_all">

    <RelativeLayout
        android:id="@+id/rlv_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc_white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/top_rlv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tag_529ce7"
                android:text="公司取名"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="6dp"
                android:layout_centerVertical="true"
                android:paddingRight="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:textColor="#529ce7" />

            <TextView
                android:id="@+id/tvTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/tvPrice"
                android:layout_toRightOf="@+id/tvLabel"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="16dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:textColor="@color/orange"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="14dp"
                android:layout_below="@+id/tvTaskTitle"
                android:background="@color/background_for_all"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/top_rlv">

            <TextView
                android:id="@+id/tvTrusteeship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已托管投稿"
                android:layout_marginLeft="12dp"
                android:drawablePadding="4dp"
                android:layout_centerVertical="true"
                android:drawableLeft="@drawable/icon_tuoguan"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvSubmissionNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7个投稿"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7天后截稿"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textColor="@color/base_gray"
                android:textSize="14sp" />

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlv_moreinfo"
        android:layout_below="@+id/rlv_info_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@color/bc_white">

        <RelativeLayout
            android:id="@+id/rlv_task_id"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tvTaskId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_centerVertical="true"
                android:text="任务编号：201702171006789"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-02-10"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_for_all"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlv_Industry"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rlv_task_id">

            <TextView
                android:id="@+id/tvIndustry_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="所属行业：03类 洗护用品"
                android:layout_marginLeft="12dp"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_for_all"/>
        </RelativeLayout>


        <!--要求-->
        <RelativeLayout
            android:id="@+id/tag_layout"
            android:layout_below="@+id/rlv_Industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/need_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任务要求:"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/llv_taglayout_recommand"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:layout_below="@+id/need_title"
                android:layout_height="wrap_content">

            </LinearLayout>

            <TextView
                android:id="@+id/tvTaskTip_more"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:layout_below="@+id/llv_taglayout_recommand"
                android:text="做洗发液产品推广，主要是男士洗发露，需要一个商标注册名字，谢谢"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/background_for_all"/>

        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlv_publisher"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tag_layout">

            <TextView
                android:id="@+id/tv_publisher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="发布者：格格"
                android:layout_marginLeft="12dp"
                android:textColor="@color/base_gray"
                android:textSize="15sp" />

        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_sendcnt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_moreinfo">

        <TextView
            android:id="@+id/tv_sendcnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="所有投稿(12)"
            android:layout_marginLeft="12dp"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>
