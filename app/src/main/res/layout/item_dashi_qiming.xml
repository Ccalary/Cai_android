<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/bc_white"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称："
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="辉格"
            android:textColor="@color/search_text_grey"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/icon_bianji" />
        <ImageView
            android:id="@+id/ivDel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_del" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:background="@color/bc_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="释义："
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvInterpretation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="光辉有格调"
            android:textColor="@color/search_text_grey"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_shangchuan"/>
    </LinearLayout>
    <View style="@style/BC_Separate_Line_Horizontal" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="洋葱："
        android:textColor="@color/bc_black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跟我生成八字有何关系"
        android:textColor="@color/search_text_grey"
        android:textSize="14sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/tvReplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回 复"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_stroke_orange"
        android:textColor="@color/orange"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="14sp" />

</LinearLayout>
</LinearLayout>