<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="109dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dashi_bg"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/ivLogo"
        android:layout_width="109dp"
        android:layout_height="80dp"
        app:roundAsCircle="true" />

    <TextView
        android:id="@+id/tvDashiName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/bc_grey"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:layout_marginRight="5dp"
        tools:text="某人" />

    <TextView
        android:id="@+id/tvDashiIntroduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textColor="@color/bc_grey"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textSize="14dp"
        tools:text="从事起名25年高端房产风水制定商业宝宝起名" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_shangbiao_et_bg"
            android:padding="2dp"
            android:text="成功起名"
            android:textSize="13dp"
            android:textColor="#5a8cff" />

        <TextView
            android:id="@+id/tvCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="298例"
            android:textSize="14dp"
            android:textColor="#ff6464" />
    </RelativeLayout>
</LinearLayout>