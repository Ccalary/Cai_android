<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:background="@color/bc_white"
    android:paddingTop="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[ 提现 ]"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="500元"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-支付宝"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="faf@qq.com"
            android:textColor="@color/bc_black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="2017-03-03 16:09"
            android:textColor="@color/search_text_grey"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvState"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="处理中"
            android:layout_marginRight="10dp"
            android:textColor="@color/orange"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#fff0dc"
        android:paddingBottom="5dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:text="原因："
        android:textColor="@color/orange"
        android:textSize="12sp" />

    <View style="@style/BC_Separate_Line_Horizontal"
        android:layout_marginTop="10dp"/>
</LinearLayout>
