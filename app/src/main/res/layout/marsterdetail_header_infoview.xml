<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_for_all">

    <RelativeLayout
        android:id="@+id/llPersonalInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_bgdsxq">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_Marster_Pic"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:roundAsCircle="true" />

        <TextView
            android:id="@+id/tv_marster_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_Marster_Pic"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/bc_white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivLeft"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_fanhui02" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tedian_title"
        android:layout_width="match_parent"
        android:background="@color/bc_white"
        android:layout_below="@+id/llPersonalInfo"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bc_22_px"
            android:text="起名特点"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/tedian_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bc_white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/title"
            android:orientation="vertical" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/dashi_desc_layout"
        android:layout_width="match_parent"
        android:layout_marginTop="12dp"
        android:background="@color/bc_white"
        android:layout_below="@+id/tedian_title"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bc_22_px"
            android:text="大师简介"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/seemore_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:textSize="14sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/base_gray_al"
            android:text="显示更多>"/>

        <TextView
            android:id="@+id/dashi_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:maxLines="4"
            android:layout_below="@+id/title_desc"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/tedian_lizi"
        android:layout_width="match_parent"
        android:background="@color/bc_white"
        android:layout_below="@+id/dashi_desc_layout"
        android:layout_marginTop="12dp"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bc_22_px"
            android:text="起名案例"
            android:layout_centerVertical="true"
            android:textColor="@color/base_gray"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background_for_all"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</RelativeLayout>
