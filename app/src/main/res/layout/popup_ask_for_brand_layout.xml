<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_solid_white"
    android:orientation="vertical"
    android:paddingBottom="10dp">


    <RelativeLayout
        android:id="@+id/rlv_title"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="注册前查询，有效提高成功率"
            android:textColor="@color/base_gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/dialog_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/icon_del" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/background_for_all"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_firstline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_title"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:text="商标名称"
            android:layout_centerVertical="true"
            android:textColor="@color/base_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_smart_name_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_brand_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:dropDownVerticalOffset="10.0dip"
                android:dropDownWidth="wrap_content"
                android:imeOptions="actionNext"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:singleLine="true"
                android:hint="输入商标名称"
                android:textCursorDrawable="@null"
                android:textSize="15.0sp" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rlv_secondline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_firstline"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_second"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:text="姓名"
            android:layout_centerVertical="true"
            android:textColor="@color/base_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_second"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_smart_name_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_contact_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:dropDownVerticalOffset="10.0dip"
                android:dropDownWidth="wrap_content"
                android:imeOptions="actionNext"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:singleLine="true"
                android:hint="请输入姓名"
                android:textCursorDrawable="@null"
                android:textSize="15.0sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlv_thirdline"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rlv_secondline"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_third"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dip"
            android:text="电话"
            android:layout_centerVertical="true"
            android:textColor="@color/base_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_third"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_smart_name_bg"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@android:color/transparent"
                android:dropDownVerticalOffset="10.0dip"
                android:dropDownWidth="wrap_content"
                android:imeOptions="actionNext"
                android:paddingLeft="8.0dip"
                android:paddingRight="8.0dip"
                android:singleLine="true"
                android:hint="请输入电话"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:textSize="15.0sp" />

        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rlv_thirdline"
        android:background="@drawable/shape_solid_orange"
        android:gravity="bottom|center_horizontal"
        android:paddingBottom="10dip"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dip"
        android:text="免费获取查询结果"
        android:textColor="@color/bc_white"></TextView>
</RelativeLayout>